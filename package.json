{
  "name": "hardhat-template",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Distributed Lab",
  "description": "",
  "scripts": {
    "install": "npx husky install",
    "compile": "npx hardhat compile --force",
    "test": "npx hardhat test",
    "test-all": "npm run deploy-dev && npm run test",
    "private-network": "npx hardhat node",
    "private-network-fork": "npx hardhat node --fork https://mainnet.infura.io/v3/$(grep INFURA_KEY .env | cut -d '\"' -f2)",
    "deploy-dev": "npx hardhat run --network localhost deploy/runners/migrations.js",
    "deploy-rinkeby": "npx hardhat run --network rinkeby deploy/runners/migrations.js",
    "deploy-chapel": "npx hardhat run --network chapel deploy/runners/migrations.js",
    "deploy-eth-mainnet": "npx hardhat run --network eth_mainnet deploy/runners/migrations.js",
    "deploy-bsc-mainnet": "npx hardhat run --network bsc_mainnet deploy/runners/migrations.js",
    "lint-fix": "npm run lint-sol-fix && npm run lint-js-fix && npm run lint-json-fix",
    "lint-json-fix": "prettier --write \"./[a-zA-Z0-9.]+(?!-lock).json\"",
    "lint-js-fix": "prettier --write \"./**/*.js\"",
    "lint-sol-fix": "prettier --write \"contracts/**/*.sol\""
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.1",
    "@openzeppelin/contracts-upgradeable": "^4.3.1",
    "bignumber.js": "^9.0.1",
    "dotenv": "^10.0.0",
    "hardhat": "^2.6.4",
    "hardhat-gas-reporter": "^1.0.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-truffle5": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@truffle/deployer": "3.2.56",
    "@truffle/reporters": "1.1.2",
    "@metamask/eth-sig-util": "^4.0.0",
    "chai": "^4.3.4",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.2",
    "mocha": "^9.1.1",
    "prettier": "^2.4.0",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle-assertions": "^0.9.2",
    "web3": "^1.5.2"
  }
}
